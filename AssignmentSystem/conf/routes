# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                       controllers.Assets.at(path="/public", file)
GET         /webjars/*file                                      controllers.WebJarAssets.at(file)


# Application skeleton
GET         /                                                   controllers.MainController.index()
GET         /assignments                                        controllers.MainController.serveAllAssignments()
GET         /assignments/:aID/problems/:pID                     controllers.MainController.serveProblem(aID : String, pID : String)

GET         /leaderboards                                       controllers.LeaderboardsController.serveLeaderboards()

GET         /my-progress                                        controllers.MyProgressController.serveStudentProgress()