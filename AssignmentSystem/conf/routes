# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /                                 controllers.MainController.index()
GET        /message                          controllers.MessageController.getMessage()
GET        /assets/javascripts/routes        controllers.MessageController.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                     controllers.Assets.at(path="/public", file)
GET        /webjars/*file                    controllers.WebJarAssets.at(file)


# Application skeleton
GET        /assignments                      controllers.MainController.serveAllAssignments()
GET        /assignments/$id<[0-9]+>          controllers.MainController.serveAssignment(id: String)

GET        /leaderboards                     controllers.MainController.serveLeaderboards()
GET        /my_progress                      controllers.MainController.serveStudentProgress()
